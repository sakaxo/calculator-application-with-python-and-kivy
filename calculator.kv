<Button>:
	bold: True

<CalculatorScreen>:
	canvas.before:
		Color:
			rgba: (205/255, 209/255, 228/255, 1)
		Rectangle:
			pos: self.pos
			size: self.size

	BoxLayout:
		orientation: 'vertical'
		size: root.width, root.height
		pos: 0, 0
		padding: 8
		spacing: 7

		TextInput:
			id: input_data
			text: '0'
			multiline: True
			size_hint: (1, 0.2)
			bold: True
			halign: 'right'
			font_size: 30
			font_family: 'fonts/Orbitron-VariableFont_wght.ttf'

		BoxLayout:
			orientation: 'vertical'

			GridLayout:
				cols: 4
				rows: 3
				spacing: 1

				# row 
				Button:
					id: clear
					text: 'C'
					background_normal: ''
					background_color: 0.8,0,0,1
					on_press: root.clear()

				Button:
					text: '\u00AB'
					background_normal: ''
					background_color: 0,0,0.8,1
					on_press: root.clearn_last_character()
				Button:
					text: '%'
					background_color: (4/255, 59/255, 92/255,1)
					on_press: root.pressed_button('%')
				Button:
					text: 'x'
					background_color: (4/255, 59/255, 92/255,1)
					on_press: root.pressed_button('*')

				# row
				Button:
					text: '7'
					on_press: root.pressed_button(7)
				Button:
					text: '8'
					on_press: root.pressed_button(8)
				Button:
					text: '9'
					on_press: root.pressed_button(9)
				Button:
					text: u'\xf7'
					background_color: (4/255, 59/255, 92/255,1)
					on_press: root.pressed_button(u'\xf7')

				# row
				Button:
					text: '4'
					on_press: root.pressed_button(4)
				Button:
					text: '5'
					on_press: root.pressed_button(5)
				Button:
					text: '6'
					on_press: root.pressed_button(6)
				Button:
					text: '-'
					background_color: (4/255, 59/255, 92/255,1)
					on_press: root.pressed_button('-')




			BoxLayout:
				orientation: 'horizontal'
				size_hint: (1, 0.65)
				spacing: 1

				GridLayout:
					cols: 3
					rows: 2
					spacing: 1

					# row
					Button:
						text: '1'
						on_press: root.pressed_button(1)
					Button:
						text: '2'
						on_press: root.pressed_button(2)
					Button:
						text: '3'
						on_press: root.pressed_button(3)
					

					# row
					Button:
						text: '.'
						background_color: (4/255, 59/255, 92/255,1)
						on_press: root.dot_button_pressed()
					Button:
						text: '0'
						on_press: root.pressed_button(0)
					Button:
						id: equals
						text: '='
						background_color: (4/255, 59/255, 92/255,1)
						on_press: root.equals()

				Button:
					text: '+'
					size_hint: (0.33333, 1)
					background_color: (4/255, 59/255, 92/255,1)
					on_press: root.pressed_button('+')



